<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/procedureName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:layout_marginTop="63px"
        android:layout_marginBottom="63px" />
    
    <TableLayout
        android:layout_width="729px"
        android:layout_height="fill_parent"
        style="@style/Table" >
        
        <TableRow
            style="@style/TableHeaderRow" >
            
            <TextView android:id="@+id/objectiveTitle"
                style="@style/TableHeaderCell"
                android:textSize="28px"
                android:text="@string/title_objective" />
            
            <TextView android:id="@+id/durationTitle"
                style="@style/TableHeaderCell"
                android:textSize="28px"
                android:text="@string/title_duration" />
            
        </TableRow>
        
        <TableRow >
            
            <TextView android:id="@+id/objective"
                style="@style/TableCell"
                android:textSize="20px"
                android:width="450px" />
                
            <TextView  android:id="@+id/duration"
                style="@style/TableCell"
                android:textSize="20px" />
            
        </TableRow>
    </TableLayout>
</LinearLayout>
