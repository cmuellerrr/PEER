<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/procedureName"
        style="@style/ProcedureName" />
    
    <TableLayout
        style="@style/CoverTable" >
        
        <TableRow
            style="@style/TableHeaderRow" >
            
            <TextView android:id="@+id/objectiveTitle"
                style="@style/CoverTableHeaderCell"
                android:text="@string/title_objective" />
            
            <TextView android:id="@+id/durationTitle"
                style="@style/CoverTableHeaderCell"
                android:text="@string/title_duration" />
            
        </TableRow>
        
        <TableRow
            style="@style/TableRow" >
            
            <TextView android:id="@+id/objective"
                style="@style/ObjectiveCell" />
                
            <TextView android:id="@+id/duration"
                style="@style/CoverTableCell" />
            
        </TableRow>
    </TableLayout>
</LinearLayout>
