<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Stretch text view horizontally, but wrap vertically -->
    <style name="HorizontalStretch">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <style name="StowageNoteCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="StowageNoteHeader" parent="StowageNoteCell">
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <style name="StepCycle" parent="HorizontalStretch">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="StepParentStep" parent="HorizontalStretch">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="StepStepText" parent="HorizontalStretch">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="StepConsequent" parent="HorizontalStretch">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="Center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="ReferenceCaption" parent="Center">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="AlertTitle" parent="Center">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="AlertText" parent="Center">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="MenuItem" >
        <item name="android:background">@drawable/menu_item_bg</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">#fffcda4f</item>
        <item name="android:onClick">handleDrawer</item>
    </style>
    
    <style name="MenuDrawer" >
        <item name="android:background">@drawable/menu_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    
</resources>
