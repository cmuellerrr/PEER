<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="android:scrollViewStyle">@style/ScrollView</item>
    </style>
    
    <style name="ScrollView" parent ="@android:style/Widget.ScrollView">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroller_line</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroller_thumb</item>
        <item name="android:scrollbarSize">5dp</item>
    </style>
    
    
    <!-- Stretch text view horizontally, but wrap vertically -->
    <style name="HorizontalStretch">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CenterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>
    
    <style name="hr">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/main</item>
    </style>
    
    <style name="hr_10" parent="hr">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    
    <!-- Widgets -->
    
    
    <style name="TopWidgetBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>
    
    <style name="Timer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main</item>
    </style>   
    
    <style name="AudioFeedback">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="ViewPager">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="StepPreview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">82dp</item>
    </style>
    
    <style name="StepPreviewText">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Breadcrumb">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>
    
    
    <!-- Menu -->
    
    
    <style name="MenuDrawer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/drawer_background</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    
    <style name="MenuGroup">
        <item name="android:layout_width">222dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="MenuTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/menu_item</item>
    </style>
    
    <style name="MenuItem" >
        <item name="android:background">@drawable/menu_item_bg</item>
        <item name="android:layout_width">188dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:textColor">@color/menu_item</item>
        <item name="android:textSize">19sp</item>
        <item name="android:onClick">menuSelect</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:visibility">gone</item>
    </style>
    
    
    <!-- Elapsed Time -->
    
    
    <style name="ElapsedTimeView">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginTop">31dp</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:background">@drawable/border_blue</item>
    </style>
    
    <style name="ElapsedTimeContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
            
    <style name="ElapsedTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="ElapsedTimeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    
    <!-- Calling Ground -->
    
    
    <style name="CallGround" parent="CenterText">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center|center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    
    
    <!-- Navigation -->
    
    
    <style name="CycleSelectTitle" parent="CenterText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/main</item>
    </style>
    
    <style name="CycleSelectItem" parent="CenterText">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/highlight</item>
    </style>
    
    
    <!-- Cover Page -->
    
    <style name="CoverSubTitle" parent="HorizontalStretch">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/main</item>
    </style>
    
    <style name="CoverText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
        
    
    <!-- Execution Notes Page -->
    
    
    <style name="ExecutionNotesTitle" parent="HorizontalStretch">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="ExecutionNotesSubTitle" parent="HorizontalStretch">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="ExecutionNotesNumber" >
        <item name="android:layout_width">184dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="ExecutionNotesText" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    
    
    <!-- Cover Page -->
    
    
    <style name="ProcedureName" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginTop">63dp</item>
        <item name="android:layout_marginBottom">63dp</item>
    </style>
    
    <style name="CoverTable" parent="Table" >
        <item name="android:layout_width">729dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="CoverTableHeaderCell" parent="TableHeaderCell" >
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="CoverTableCell" parent="TableCell" >
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="ObjectiveCell" parent="CoverTableCell" >
        <item name="android:layout_width">450dp</item>
    </style>
    
    
    <!-- Cycle Marker -->
    
    
    <style name="CycleNote" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20sp</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="CycleNoteText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    
    <!-- Steps -->
    
    
    <style name="StepCycle" parent="HorizontalStretch">
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="ParentStep" parent="HorizontalStretch">
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="Step" parent="HorizontalStretch">
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textSize">26sp</item>
    </style>
    
    
    <!-- Callouts (ex notes, notes/cautions/warnings) -->
    
    
    <style name="Callout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    
    <style name="CalloutHeaderCell" parent="TableHeaderCell">
        <item name="android:gravity">center|center_vertical</item>
    </style>
    
    <style name="CalloutCell" parent="TableCell">
        <item name="android:textSize">26sp</item>
    </style>
    
    
    <!-- References -->
    
    
    <style name="Reference">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    
    <style name="ReferenceCaption" parent="CenterText">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">15sp</item>
    </style>    
    
    
    <!-- Tables -->
    
    
    <style name="Table">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_blue</item>
        <item name="android:shrinkColumns">*</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="TableRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    
    <style name="TableHeaderRow" parent="TableRow">
        <item name="android:background">@drawable/dot_bg_blue</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    
    <style name="TableHeaderCell" parent="TableCell" >
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>  
        <item name="android:shadowDy">2</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="TableCell" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="TableImageCell" parent="TableCell">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    
    <!--  Timer -->
    
    
    <style name="TimerButtonText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/menu_item</item>    
        <item name="android:layout_height">40dp</item>    
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:background">@drawable/border_blue_dots</item>
    </style>
    
    
    <!-- Completion Page -->
    
    
    <style name="CompletionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginTop">63dp</item>    
        <item name="android:layout_marginBottom">63dp</item>
    </style>
    
    <style name="CompletionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
    </style>
    
</resources>
